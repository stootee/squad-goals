{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@api": ["api/index.ts"],
      "@api/*": ["api/*"]
    },
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
