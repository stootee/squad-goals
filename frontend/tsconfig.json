{
  "compilerOptions": {
    "target": "ES2020",              // or at least ES2017+
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],        // âœ… includes Promise + browser APIs
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"]
    },
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
